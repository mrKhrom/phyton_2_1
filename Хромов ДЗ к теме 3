    "def sum_distance(start, finish):\n",
    "    \n",
    "    if start < finish:\n",
    "        start_number = start\n",
    "        finish_number = finish\n",
    "    else:\n",
    "        start_number = finish\n",
    "        finish_number = start\n",
    "\n",
    "    return sum(range(start_number, finish_number + 1))\n",
    "\n",
    "print(sum_distance(1,3))\n",
    "print(sum_distance(1,4))"
   ]
  },
