    "def trim_and_repeat(string_for_cut, offset=0, repetitions=1):\n",
    "    \n",
    "    string_for_cut = string_for_cut[offset:]\n",
    "\n",
    "    for _ in range(repetitions):\n",
    "        print(string_for_cut)\n",
    "\n",
    "    return string_for_cut\n",
    "\n",
    "trim_and_repeat(\"Hello\", 2, 3)\n",
    "trim_and_repeat(\"money\")"
